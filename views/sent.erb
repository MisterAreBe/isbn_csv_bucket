<html>
    <head>
            <title>RB's Good Job!</title>
    </head>
    <body>
        <center>
            <div>
                <span class="big">Congratulations!</span><br>
                <span class="small">The information you entered has been sent to our S3 bucket!</span><br>
                <span class="small">A second csv file was also sent, containing your entries validity.</span><br>
                <form method="post" action="/more">
                    <input type="submit" value="Have More ISBN(s)?">
                    <input type="hidden" name="count" value="<%= count %>">
                    <div>
                        <table>
                            <tr>
                                <th>ISBN Entries</th>
                                <th>Valid?</th>
                            </tr>
                            <% isbn.each_with_index do |v,i| %>
                                <tr class="new">
                                    <td>
                                        <input type="hidden" name="isbn[]" value="<%= v %>">
                                        <div><%= v %></div>
                                    </td><td>
                                        <input type="hidden" name="valid[]" value="<%= valid[i] %>">
                                        <div><%= valid[i] %></div>
                                    </td>
                                </tr>
                            <% end %>
                            <% stored_isbn.each_with_index do |v,i| %>
                                <tr class="old">
                                    <td>
                                        <input type="hidden" name="isbn[]" value="<%= v %>">
                                        <div><%= v %></div>
                                    </td><td>
                                        <input type="hidden" name="valid[]" value="<%= stored_valid[i] %>">
                                        <div><%= stored_valid[i] %>
                                    </td>
                                </tr>
                            <% end %>
                        </table>
                    </div>
                </form>
            </div>
        </center>
    </body>
</html>